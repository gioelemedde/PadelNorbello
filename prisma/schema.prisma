generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CeIscritti{
  id String @id @default(uuid())
  nomeGenitore String
  cognomeGenitore String
  numeroTelefono String
  email String
  nomeBambino String
  cognomeBambino String
  giugnoPagato Boolean @default(false)
  luglioPagato Boolean @default(false)
  agostoPagato Boolean @default(false)
  creatoIl DateTime @default(now())
}